<div class="panel panel-primary">
    <div class="panel-heading" id="title-message">Message List</div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info mgr5"><%= message.name %> <% if message.age %>(<%= message.age %>)<% end %></span>
            <%= message.body %>
            <%= link_to "edit" , edit_message_path(message), :class => "label label-success" %>
            <%= link_to "destroy" , message, method: :delete, data: { confirm: '削除してもよろしいですか？' }, :class => "label label-danger" %>
            <br />
        <% end %>
    </div>
</div>

<% #部分テンプレート読み込み %>
<%= render 'form' %>
